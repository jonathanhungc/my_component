<div class="intro-message wrap">

    <h3>
        {{#if (theme-setting "New_User")}}
            Welcome, new user!
        {{else}}
            Welcome back, user!
        {{/if}}
    </h3>
    
    {{d-icon "grin-beam"}} <strong>{{{theme-setting "Greeting_Type"}}}</strong>
    {{theme-i18n "banner_message"}}

</div>

<div class="wrap">
  <h3>
    Badges:
  </h3>
  <ul>
    {{#each badges as |badge|}}
      <li>
        {{badge.name}}
      </li>
    {{/each}}
  </ul>
</div>